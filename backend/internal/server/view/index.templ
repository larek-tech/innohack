package view

import "github.com/larek-tech/innohack/backend/templ/layout"

templ Index() {
	@layout.Layout("inno-docs") {
		<body class="bg-gray-100 text-gray-900">
			<!-- Navbar -->
			<header class="bg-lime-600 text-gray-100 p-4">
				<div class="container mx-auto flex justify-between items-center">
					<h1 class="text-lg font-semibold">Inno-docs</h1>
				</div>
			</header>
			<!-- Hero Section -->
			<section class="bg-gray-900 text-gray-100 py-20">
				<div class="container mx-auto text-center">
					<h2 class="text-4xl font-bold mb-4">Analyze Your Documents Effortlessly</h2>
					<p class="mb-6 text-lg">
						Using advanced ML and LLM technology, analyze, detect, and index text for easy
						retrieval.
					</p>
					<a href="#features" class="bg-lime-600 hover:bg-lime-700 text-white font-semibold py-2 px-6 rounded-full">
						Learn More
					</a>
				</div>
			</section>
			<!-- Features Section -->
			<section id="features" class="py-16">
				<div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
					<!-- Feature 1 -->
					<div class="bg-gray-100 p-6 rounded-lg shadow-md text-center">
						<h3 class="text-xl font-semibold mb-2 text-gray-900">Automated Text Detection</h3>
						<p>
							Our system uses cutting-edge machine learning to accurately detect and analyze written text in
							documents.
						</p>
					</div>
					<!-- Feature 2 -->
					<div class="bg-gray-100 p-6 rounded-lg shadow-md text-center">
						<h3 class="text-xl font-semibold mb-2 text-gray-900">Efficient Indexing</h3>
						<p>
							Store and retrieve information faster with our efficient indexing system, making document management
							simple.
						</p>
					</div>
					<!-- Feature 3 -->
					<div class="bg-gray-100 p-6 rounded-lg shadow-md text-center">
						<h3 class="text-xl font-semibold mb-2 text-gray-900">Intuitive Analysis</h3>
						<p>
							Get valuable insights from your text data with easy-to-use analysis tools designed for non-technical
							users.
						</p>
					</div>
				</div>
			</section>
			<!-- CTA Section -->
			<section class="bg-gray-900 text-gray-100 py-10">
				<div class="container mx-auto text-center">
					<h2 class="text-3xl font-bold mb-4">Ready to Transform Your Text Analysis?</h2>
					<a href="#contact" class="bg-lime-600 hover:bg-lime-700 text-white font-semibold py-3 px-8 rounded-full">
						Get Started
					</a>
				</div>
			</section>
		</body>
	}
}
